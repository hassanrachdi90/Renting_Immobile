

@{

    var status = Context.Request.Query["status"];
    var approved = "";
    var pending = "";
    var chechedIn = "";
    var completed = "";
    var cancelled = "";

    switch (status)
    {
        case SD.StatusApproved:approved = "text-white bg-success";break;
        case SD.StatusPending: pending = "text-white bg-success"; break;
        case SD.StatusChechedIn: chechedIn = "text-white bg-success"; break;
        case SD.StatusCompleted: completed = "text-white bg-success"; break;
        case SD.StatusCancelled: cancelled = "text-white bg-success"; break;
        default : break;
    }
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Booking List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="d-flex justify-content-end pb-4 pt-2 ">
            <ul class="list-group list-group-horizontal-sm ">
                <a class="text-decoration-none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusPending">
                <li class="list-group-item @pending"> @SD.StatusPending</li>
                </a>
                <a class="text-decoration-none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusApproved">
                <li class="list-group-item @approved"> @SD.StatusApproved</li>
                </a>
                <a class="text-decoration-none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusChechedIn">
                <li class="list-group-item @chechedIn"> @SD.StatusChechedIn</li>
                </a>
                <a class="text-decoration-none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCompleted">
                <li class="list-group-item @completed"> @SD.StatusCompleted</li>
                </a>
                <a class="text-decoration-none" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCancelled">
                <li class="list-group-item @cancelled"> @SD.StatusCancelled</li>
                </a>
            </ul>
        </div>
        <table id="myTable" class="table table-bordered  table-striped">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                         Email
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Check In Date
                    </th>
                    <th>
                       Nights
                    </th>
                    <th>
                        Total
                    </th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
   <script src="~/js/Booking.js"></script>
}


 

